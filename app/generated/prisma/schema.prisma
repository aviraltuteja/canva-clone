generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Design {
  id         String    @id @default(cuid())
  name       String
  userId     String
  user       User      @relation("OwnedDesigns", fields: [userId], references: [id])
  elements   Element[]
  privacy    Privacy   @default(private)
  sharedWith User[]    @relation("SharedDesigns")
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  name          String
  password      String
  role          UserRoles
  createdAt     DateTime  @default(now())
  ownedDesigns  Design[]  @relation("OwnedDesigns")
  sharedDesigns Design[]  @relation("SharedDesigns")
}

model Element {
  id         String  @id @default(cuid())
  designId   String
  design     Design  @relation(fields: [designId], references: [id])
  type       String
  text       String?
  src        String?
  left       Float
  top        Float
  fontSize   Int?
  fontFamily String?
  scaleX     Float?
  scaleY     Float?
}

enum UserRoles {
  client
  admin
}

enum Privacy {
  private
  shared
  template
}
